{
  "extends": "@tsconfig/svelte/tsconfig.json",
  "compilerOptions": {
    "sourceMap": true,
    "types": ["svelte", "node"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/**/*", "plugins/**/*"],
  "exclude": ["node_modules/*", "__sapper__/*", "public/*"]
}
